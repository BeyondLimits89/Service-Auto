@page
@model Service_Auto.Pages.Repairs.EditModel

@{
    ViewData["Title"] = "Modificare";
}
<h4>Serviciu efectuat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Repair.ServiceID" />
            <div class="form-group">
                <label asp-for="Repair.Description" class="control-label"></label>
                <input asp-for="Repair.Description" class="form-control" />
                <span asp-validation-for="Repair.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.Time" class="control-label"></label>
                <input asp-for="Repair.Time" class="form-control" />
                <span asp-validation-for="Repair.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.Cost" class="control-label"></label>
                <input asp-for="Repair.Cost" class="form-control" />
                <span asp-validation-for="Repair.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.VehicleID" class="control-label"></label>
                <select asp-for="Repair.VehicleID" class="form-control" asp-items="ViewBag.VehicleID"></select>
                <span asp-validation-for="Repair.VehicleID" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Salvare" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
