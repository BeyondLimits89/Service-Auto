@page
@model Service_Auto.Pages.ServiceAppointments.CreateModel

@{
    ViewData["Title"] = "Adauga o programare";
}


<h4>Programare noua</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceAppointment.VehicleID" class="control-label"></label>
                <select asp-for="ServiceAppointment.VehicleID" class ="form-control" asp-items="ViewBag.VehicleID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ServiceAppointment.Date" class="control-label"></label>
                <input asp-for="ServiceAppointment.Date" class="form-control" type="date"/>
                <span asp-validation-for="ServiceAppointment.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceAppointment.Time" class="control-label"></label>
                <select asp-for="ServiceAppointment.Time" class="form-control" asp-items="ViewBag.TimeOptions">
                    <option value="">-- Select a Time --</option>
                </select>
                <span asp-validation-for="ServiceAppointment.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceAppointment.Status" class="control-label"></label>
                <select asp-for="ServiceAppointment.Status" class="form-control" asp-items="ViewBag.Statuses">
                    <option value="">-- Select a Status --</option>
                </select>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Adauga" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
